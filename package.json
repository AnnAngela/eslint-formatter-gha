{
    "name": "@annangela/eslint-formatter-gha",
    "version": "1.0.0",
    "description": "A better ESLint formatter used in GitHub Actions",
    "main": "./dist/index.cjs",
    "exports": {
        ".": "./dist/index.cjs"
    },
    "files": [
        "dist"
    ],
    "type": "module",
    "scripts": {
        "lint:check": "eslint src",
        "lint:check-ci": "eslint --debug --exit-on-fatal-error -f ./node_modules/@annangela/eslint-formatter-gha/dist/index.cjs --max-warnings 0 ./src",
        "lint:write": "eslint --fix src",
        "lint:eslint.config.flat": "eslint eslint.config.js",
        "package:production": "esbuild src/index.ts --bundle --format=cjs --platform=node --legal-comments=inline --outdir=dist --out-extension:.js=.cjs --target=node18 --tree-shaking=true --log-limit=0 --footer:js=\";module.exports=module.exports.default;\" --minify --analyze",
        "package:development": "esbuild src/index.ts --bundle --format=cjs --platform=node --legal-comments=inline --outdir=dist --out-extension:.js=.cjs --target=node18 --tree-shaking=true --log-limit=0 --footer:js=\";module.exports=module.exports.default;\" --analyze=verbose",
        "test": "echo \"Error: no test specified\" && exit 1"
    },
    "engines": {
        "node": "^18.17 || ^20.9"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/AnnAngela/eslint-formatter-gha.git"
    },
    "keywords": [
        "eslint",
        "eslint-formatter",
        "eslintformatter"
    ],
    "author": "AnnAngela",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/AnnAngela/eslint-formatter-gha/issues"
    },
    "homepage": "https://github.com/AnnAngela/eslint-formatter-gha#readme",
    "devDependencies": {
        "@actions/core": "^1.10.1",
        "@annangela/eslint-formatter-gha": "^1.0.0",
        "@annangela/eslint-plugin-prefer-reflect": "^2.1.0",
        "@eslint/js": "^8.56.0",
        "@stylistic/eslint-plugin": "^1.5.1",
        "@stylistic/eslint-plugin-migrate": "^1.5.1",
        "@types/eslint": "^8.44.9",
        "@types/node": "^18.19.3",
        "@typescript-eslint/eslint-plugin": "^6.15.0",
        "@typescript-eslint/parser": "^6.15.0",
        "esbuild": "^0.19.10",
        "eslint": "^8.56.0",
        "eslint-plugin-node": "^11.1.0",
        "eslint-plugin-prefer-arrow-functions": "^3.2.4",
        "typescript": "^5.3.3"
    }
}
